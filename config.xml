<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pl.galleryapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Photo Gallery App</name>
    <author email="kmiasko@gmail.com" href="http://kmiasko.github.io">
      Krzysztof MiÄ…sko
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <uses-sdk android:minSdkVersion="22" android:targetSdkVersion="23" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="latest" />
    <plugin name="cordova.plugins.diagnostic" spec="~3.4.1" />
    <plugin name="cordova-plugin-camera" spec="~2.3.1" />
</widget>
